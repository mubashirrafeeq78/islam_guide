name: Build Compact APK
on:
  push:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          channel: 'stable'
      
      - name: Install Dependencies
        run: flutter pub get

      - name: Build Split APK (Small Size)
        run: flutter build apk --release --split-per-abi # یہ سائز کم کر دے گا

      - name: Upload APK
        uses: actions/upload-artifact@v4
        with:
          name: Masail-ka-Hal-Small-APK
          path: build/app/outputs/flutter-apk/app-armeabi-v7a-release.apk
